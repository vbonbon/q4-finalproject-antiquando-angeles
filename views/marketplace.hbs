<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Marketplace - Fluff & Stuff</title>
  <link rel="stylesheet" href="/marketplace.css">
</head>
<body>
  <nav>
    <a href="/home">Home</a>
    <a href="/marketplace">Marketplace</a>
    <a href="/shoppingcart">Cart</a>
    <a href="/logout">Logout</a>
  </nav>

  <div class="marketplace-wrapper">
    <div class="cart-overview">
      <h2>Your Cart</h2>
      <ul>
        {{#each cart}}
          <li>{{this.productName}} × {{this.quantity}}</li>
        {{/each}}
      </ul>
      <a href="/shoppingcart" class="view-full-cart">View Full Cart</a>
    </div>

    <div class="product-container">
      {{#each products}}
      <div class="product">
        <img src="{{this.image}}" alt="{{this.productName}}">
        <h3>{{this.productName}}</h3>
        <p class="description">{{this.description}}</p>
        <p>Price: ₱{{this.price}}</p>
        <form action="/add-to-cart" method="POST">
          <input type="hidden" name="productId" value="{{this.productId}}">
          {{#if this.options}}
            <label for="variant">Choose a variant:</label>
            <select name="variant" required>
              {{#each this.options}}
                <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
          {{/if}}

          {{#if this.allowComments}}
            <label for="comment"> Additionall Requests: </label>
            <textarea name="comment" rows="2" placeholder="You may add a request here! (e.g your preffered colors for the item!)"></textarea>
          {{/if}}

          <label for="quantity">Quantity:</label>
          <input type="number" name="quantity" value="1" min="1">
          <button type="submit">Add to Cart</button>
        </form>
      </div>
      {{/each}}
    </div>
  </div>

  <script src="/marketplace.js"></script>
</body>
</html>


