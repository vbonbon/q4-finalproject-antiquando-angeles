        gap: 2rem;
        padding: 2rem;
    }

    .contacts, .about-website {
        background-color: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .contacts h2, .about-website h2 {
        color: #ff69b4;
    }

    footer {
        text-align: center;
        padding: 1rem;
        background-color: #ffb6c1;
        color: white;
        position: relative;
        bottom: 0;
        width: 100%;
    }
</style>
